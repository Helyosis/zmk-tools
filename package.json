{
  "name": "zmk-tools",
  "displayName": "ZMK Tools",
  "description": "Tools for working with ZMK Firmware",
  "version": "0.4.0",
  "publisher": "spadin",
  "license": "MIT",
  "author": {
    "name": "Joel Spadin"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joelspadin/zmk-tools.git"
  },
  "icon": "images/zmk_logo.png",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dts",
    "onLanguage:zmk-keymap"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zmk-keymap",
        "aliases": [
          "ZMK Keymap"
        ],
        "extensions": [
          ".keymap"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "dts",
        "extensions": [
          ".overlay"
        ]
      }
    ],
    "grammars": [
      {
        "language": "zmk-keymap",
        "scopeName": "source.dts",
        "path": "./syntaxes/dts.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build-wasm": "tree-sitter build-wasm node_modules/tree-sitter-devicetree",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.18.12",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.0",
    "tree-sitter-cli": "^0.20.6",
    "tree-sitter-devicetree": "^0.5.0",
    "typescript": "^4.6.2",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "markdown-escape": "^1.1.0",
    "web-tree-sitter": "^0.20.5"
  }
}
